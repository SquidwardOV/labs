#include<iostream>
#include<cmath>

using namespace std;

int main()
{
    double x, E, sum1, sum2, element, k, chisl, power, t;
    int N, count = 0;
    cout << "Введите x: "; cin >> x; cout << endl;
    cout << "Введите N: "; cin >> N; cout << endl;
    cout << "Введите E: "; cin >> E; cout << endl;
    for (int i = 0; i < N; ++i) {
        k *= (2 * i);
        for (int j = 1; j <= i; ++j){;
            chisl *= ((2 * j) - 1);
        }
        power = power * x;
        t = (chisl / k) * (power);
        
        if (i % 2 == 0) {
            sum1 += t;
        }
        if (i % 2 != 0) {
            sum1 -= t;
        }
        chisl = 1;
        }
        
    }
    for (int i = 0; i < N; ++i){
        for (int j = 1; j <= i; ++j){
        power = power * x;
        element = (((2 * i) - 1) / (k * (2 * i))) * power;
        if (abs(element) > E * 11) {sum2 += element; ++count;}
        else break;
        }
    }
    cout << "Первая сумма: " << sum1 << endl;
    cout << "Вторая сумма: " << sum2 << endl;
    cout << "Количество слагаемых: " << count << endl;
    cout << "Результат расчета функции: " << pow(M_E, x * -1) << endl;
    cout << "Результат функции - сумма2 = " << pow(M_E, x * -1) - sum2;
    return 0;
}
